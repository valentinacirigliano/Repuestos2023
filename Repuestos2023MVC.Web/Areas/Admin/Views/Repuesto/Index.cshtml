@model IEnumerable<Repuestos2023.Models.Models.Repuesto>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row w-90">
        <div class="col-6">
            <h2>Lista de Repuestos</h2>

        </div>
        <div class="col-6 text-end">
            <a asp-controller="Repuesto" asp-action="UpSert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp;
                Nuevo Repuesto
            </a>
        </div>
    </div>
    <table class="table table-bordered w-90">
        <thead>
            <tr>
                <th>Imagen</th>
                <th>Descripcion</th>
                <th>Precio</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td><img src="/images/repuestos/@item.Imagen" alt="Category Image" style="max-width: 70px; max-height: 70px;"></td>
                        <td>@item.Descripcion</td>
                        <td>@item.PrecioLista</td>
                        <td>
                            <a class="btn btn-warning" asp-controller="Repuesto" asp-action="Edit" asp-route-id="@item.RepuestoId">
                                <i class="bi bi-pencil-square"></i>&nbsp;
                                Editar
                            </a>
                            <a class="btn btn-danger" asp-controller="Repuesto" asp-action="Delete" asp-route-id="@item.RepuestoId">
                                <i class="bi bi-trash3"></i> &nbsp;
                                Borrar
                            </a>
                            
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3">
                        No hay repuestos todavía
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
@section Scripts{
    <script src="~/js/repuesto.js"></script>
}



